<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="10dp"
    android:layout_marginBottom="50dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_out_door_item"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/txt_img_desc"
            android:layout_below="@id/image_out_door_item"
            android:layout_width="match_parent"
            android:text=""
            android:layout_height="120dp"
            />
        <Button
            android:layout_below="@id/txt_img_desc"
            android:id="@+id/button_out_door_delete_image"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="حذف الصورة"
            android:textSize="16sp"
            android:background="#4d0b0b"
            android:textColor="@color/colorRow"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

