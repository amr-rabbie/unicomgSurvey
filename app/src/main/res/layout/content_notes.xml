<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="الملاحظات"
            android:textColor="@color/colorRow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logoXmarks"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logoicon" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="100dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_notes"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/editback"
                android:ems="10"
                android:maxLength="255"
                android:hint="ملاحظات عامة "
                android:layout_height="200dp"
                android:maxLines="20"
                android:inputType="text|textNoSuggestions|textMultiLine"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="وقت الزيارة"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/edt_notes"
                app:layout_constraintTop_toBottomOf="@+id/edt_notes" />

            <TextView
                android:id="@+id/tvVisitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="sadsa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView

                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="الموقع الجغرافى"
                android:textColor="#000"

                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.966"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVisitDate" />

            <TextView
                android:id="@+id/tvLatLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.806"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.966"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLatLang"
                android:gravity="right"

                >
                <CheckBox
                    android:id="@+id/chk_electricty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="تحديد مصادر الكهرباء"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="تحديد مصادر المياه"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_bill_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="توضيح تاريخ انتهاء العقد"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_colunms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="توضيح اماكن الاعمدة والقمرات الخرسانية وقياساتها"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_doors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="توضيح قياسات الابواب والشبابيك الخاصة بكل غرفة"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="توضيح اذا كان يوجد اسقف ثانوية ام لا"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

                <CheckBox
                    android:id="@+id/chk_net_cams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="توضيح العوامل المؤثرة على تركيب الكامرات والانترنت"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"

                    />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>


        <Button
            android:id="@+id/btnSendData"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner"
            android:onClick="saveData"
            android:text="حفظ المسح الميداني"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>


