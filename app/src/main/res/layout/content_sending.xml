<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Sucess.SendingDataSucessActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="417dp"
        android:layout_height="40dp"
        android:text="تم حفظ البيانات"
        android:gravity="center"
        android:textColor="#58585b"
        android:layout_marginTop="179dp"
        android:layout_marginRight="175dp"
        android:layout_marginLeft="176dp"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="392.8dp"
        android:layout_height="258.2dp"
        android:layout_marginTop="55.6dp"
        android:layout_marginRight="187.2dp"
        android:layout_marginLeft="188dp"
        app:srcCompat="@drawable/sendsucess" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dp"

        >

        <ImageView
            android:id="@+id/ibtnview"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="اضافة بيانات اخرى"/>

    </LinearLayout>


    <ProgressBar

        android:visibility="gone"
        android:id="@+id/progress_upload_data"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp" />

</LinearLayout>