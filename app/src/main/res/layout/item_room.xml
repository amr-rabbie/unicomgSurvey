<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
     app:cardCornerRadius="10dp"
    app:cardElevation="7dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:text="اسم الغرفه :"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_room_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    android:text="كاتب العدل "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ooo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:text="العدد :"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_room_num_item"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    android:text="6"
                    android:textColor="@color/colorSecondaryText" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/zzz"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:text="الملاحظات :"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_furn_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    android:text="بلتنيب تابلا نبللاابلا ةنيبلانميبلابانىبللااةتبلؤلا   بلةانم"
                    android:textColor="@color/colorSecondaryText" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:text="مشتركه مع مكتب :"
                    android:visibility="visible"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                    android:text="بلتنيب تابلا نبللاابلا ةنيبلانميبلابانىبللااةتبلؤلا   بلةانم"
                    android:textColor="@color/colorSecondaryText" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/room_images_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:spanCount="2"
                android:layout_gravity="center"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_delete_room_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/delete"
                android:visibility="visible"

                />

            <ImageView
                android:id="@+id/imageView_edit_room_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:src="@drawable/edit"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


